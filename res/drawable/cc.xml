<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:drawable="@drawable/ic_closed_caption_blue" android:state_pressed="true" />
    <!-- focused -->
    <item android:drawable="@drawable/ic_closed_caption_white" android:state_focused="true" />
    <!-- hovered -->
    <item android:drawable="@drawable/ic_closed_caption_white" android:state_hovered="true" />
    <!-- activated -->
    <item android:drawable="@drawable/ic_closed_caption_white" android:state_enabled="true" />
    <!-- deactivated -->
    <item android:drawable="@drawable/ic_closed_caption_grey" android:state_enabled="false" />
    <!-- default -->
    <item android:drawable="@drawable/ic_closed_caption_white" />
</selector>